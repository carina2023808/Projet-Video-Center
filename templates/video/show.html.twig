{% extends 'base.html.twig' %}

{% block title %}{{ "#"~ video.id ~" "~ video.title}}{% endblock %}
{% block body %}
<div class = "row">
    <div  align = "center" class= "col-md-6 mx-auto">
        <article>
            <h1> {{ video.title |title }}</h1>
            <br>
              <iframe src={{video.videoLink}}></iframe>
            <p>Video créée par {{ video.user.firstname }} {{ video.user.lastname }}</p>
            <br>
            <h5>{{ video.description | nl2br }}</h5>
        </article>
        <br>
        <small>Submitted {{ video.createdAt | date ("d/m/Y") }}</small>
        <br>
        <small>Updated {{ video.updatedAt | date ("d/m/Y H:i") }}</small>
        <br><br>

        {% if app.user and app.user.isVerified %}
                {% if app.user is same as video.user %}
                    <a class="btn btn-primary btn-sm" href={{ path('app_video_edit', {id: video.id}) }}>Edit video</a>
                    <a class= "btn btn-danger btn-sm" href={{ path('app_video_delete', {id: video.id}) }} onclick="return confirm('Are you sure you want to delete this video?')">Delete</a>
                {% endif %}
        {% endif %}
        <a class="btn btn-secondary btn-sm" href={{ path('app_video_index') }}>Go Back</a>




    </div>
  
</div>

{% endblock %}
